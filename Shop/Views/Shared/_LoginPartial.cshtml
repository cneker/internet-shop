@using Microsoft.AspNetCore.Identity
@using Shop.Models
@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Cart" asp-action="ShowCart">
            <img width="20" height="20" src="~/Pictures/cart.jpg"/>
        </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Authorization" asp-action="LogOut">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Authorization" asp-action="Registration">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Authorization" asp-action="Authorize">Login</a>
    </li>
}
</ul>
