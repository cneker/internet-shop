@using Shop.Models
@model Dictionary<Product, int>

@{
    decimal totalPrice = 0;
}

<div class="pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                <!-- Shopping cart table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="p-2 px-3 text-uppercase">Product</div>
                                </th>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="py-2 text-uppercase">Price</div>
                                </th>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="py-2 text-uppercase">Quantity</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                        @foreach (var prod in Model)
                        {
                            totalPrice += prod.Key.Price * prod.Value;
                            <tr>
                                <th scope="row" class="border-0">
                                    <div class="p-2">
                                        <img src="@prod.Key.ImagePath" alt="" width="70" class="img-fluid rounded shadow-sm">
                                        <div class="ml-3 d-inline-block align-middle">
                                            <h5 class="mb-0 text-dark d-inline-block align-middle">@prod.Key.Name</h5>
                                        </div>
                                    </div>
                                </th>
                                <td class="border-0 align-middle"><strong>$@prod.Key.Price</strong></td>
                                <td class="border-0 align-middle"><strong>@prod.Value</strong></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <!-- End -->
            </div>
        </div>

        <div class="row py-5 p-4 bg-white rounded shadow-sm">
            <div class="col-lg-12">
                <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
                <div class="p-4">
                    <ul class="list-unstyled mb-4">
                        <li class="d-flex justify-content-between py-3 border-bottom">
                            <strong class="text-muted">Total</strong>
                            <h5 class="font-weight-bold">$@totalPrice</h5>
                        </li>
                    </ul><a href="@Url.Action("SubmitOrder", "Cart")" class="btn btn-dark rounded-pill py-2 btn-block">Procceed to checkout</a>
                </div>
            </div>
        </div>

    </div>
</div>